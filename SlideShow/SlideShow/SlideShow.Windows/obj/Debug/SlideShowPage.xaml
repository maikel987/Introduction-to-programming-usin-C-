<Page
    x:Class="SlideShow.SlideShowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SlideShow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Image Name="imgMainImage" Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image x:ConnectionId='1' Source="Assets/033_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='2' Source="Assets/075_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='3' Source="Assets/095_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='4' Source="Assets/101_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='5' Source="Assets/Ashdot field 10_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='6' Source="Assets/Ashdot field 2_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='7' Source="Assets/Ashdot field 3_Small.JPG" Height="100" Width="100"                                         />
                <Image x:ConnectionId='8' Source="Assets/Ashdot field 5_Small.JPG" Height="100" Width="100"                                         />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>


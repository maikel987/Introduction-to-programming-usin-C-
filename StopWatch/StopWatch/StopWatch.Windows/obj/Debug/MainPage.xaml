<Page
    x:Class="StopWatch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StopWatch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Stretch" Name="txtDuration" VerticalAlignment="Top" Margin="5" TextAlignment="Center" Foreground="White" FontSize="500" FontWeight="Bold" />
        <Button x:ConnectionId='1' Content="Start" Height="150" HorizontalAlignment="Left" Margin="5,0,0,5" Name="btnStart" VerticalAlignment="Bottom" Width="520" FontSize="100"                        />
        <Button x:ConnectionId='2' Content="Stop" Height="150" HorizontalAlignment="Right" Margin="0,0,5,5" Name="btnStop" VerticalAlignment="Bottom" Width="520" FontSize="100" IsEnabled="False"                       />
    </Grid>
</Page>

